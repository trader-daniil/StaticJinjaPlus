[flake8]
ignore =
    D100,
    D101,
    D102,
    D103,
    D104,
    D105,
    D106,
    D107,
    ; conflicts with W504 https://github.com/mila-iqia/cookiecutter-pyml/issues/10
    W503
max-line-length = 120
max-complexity = 7
exclude = 
    migrations  ; exclude autogenerated Django migrations
count = true
